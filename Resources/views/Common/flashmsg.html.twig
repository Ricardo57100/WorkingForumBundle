{% if app.flashes('success') |length %}
    <div class="alert-success">
        <ul>
            {% for flashMessage in app.flashes('success') %}
                <li>{{ flashMessage }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
{% if app.flashes('error') |length %}
    <div class="alert-error">
        <ul>
            {% for flashMessage in app.flashes('error') %}
                <li>{{ flashMessage }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
{% if form is defined and form is not null and form_errors(form) %}
    <div class="alert-error">
        {{ form_errors(form) }}
    </div>
{% endif %}

